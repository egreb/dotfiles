// Place your settings in this file to overwrite the default settings
{
  // EDITOR
  "editor.fontSize": 14,
  "editor.lineHeight": 18,
  "editor.letterSpacing": 0.5,
  "editor.tabSize": 4,
  "editor.fontWeight": "400",
  "editor.renderWhitespace": "none",
  "editor.insertSpaces": false,
  "editor.quickSuggestionsDelay": 5,
  "editor.formatOnPaste": true,
  "editor.cursorStyle": "line",
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "solid",
  "editor.mouseWheelZoom": false,
  "editor.multiCursorModifier": "alt",
  "editor.snippetSuggestions": "top",
  "editor.fontFamily": "Menlo",
  "editor.formatOnSave": true,
  // "editor.fontFamily": "Inconsolata, Monaco, Consolas, 'Courier New', Courier;",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      // Remove italics from function parameters.
      {
        "scope": "variable.parameter.js",
        "settings": {
          "fontStyle": ""
        }
      },
      // Render object destructuring mappingsâ€™ original property names as strings.
      // Does not apply to non-mapped identifiers.
      {
        "scope": "variable.object.property.js",
        "settings": {
          "foreground": "#98c379"
        }
      },
      // Render literal object keys as strings.
      // Does not apply to shorthand properties.
      {
        "scope": "meta.object-literal.key.js",
        "settings": {
          "foreground": "#98c379"
        }
      },
      // Render property accesses as strings.
      {
        "scope": "variable.other.object.property.js,variable.other.property.js,support.variable.property.dom.js",
        "settings": {
          "foreground": "#98c379"
        }
      },
      // Highlight template interpolation tokens.
      {
        "scope": "punctuation.definition.template-expression.begin.js,punctuation.definition.template-expression.end.js",
        "settings": {
          "foreground": "#c678dd"
        }
      },
      // Fix punctuation color inside template interpolation expressions.
      {
        "scope": "meta.template.expression.js",
        "settings": {
          "foreground": "#bbbbbb"
        }
      }
    ]
  },
  // WORKBENCH
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.showTabs": true,
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.activityBar.visible": true,
  "workbench.iconTheme": "material-icon-theme",
  // "workbench.colorCustomizations": {
  //     "statusBar.background": "#262626",
  //     "editorCursor.foreground": "#f8f8f0", // Default: #AEAFAD
  //     "terminalCursor.foreground": "#31bc21", // Default: #c8c8c8
  //     "tab.activeBackground": "#282c34",
  // },
  // "workbench.colorCustomizations": {
  //     "tab.activeBackground": "#282c34",
  //     "activityBar.background": "#282c34",
  //     "editorGroup.background": "#282c34",
  //     "sideBar.background": "#282c34"
  // },
  "workbench.startupEditor": "newUntitledFile",
  // "workbench.colorCustomizations": {
  //     "statusBar.background": "#333",
  //     "statusBar.foreground": "#fff",
  //     "statusBar.noFolderBackground": "#333",
  //     "statusBar.noFolderForeground": "#fff",
  // },
  "workbench.colorTheme": "One Dark Pro",
  // WINDOW
  "window.zoomLevel": 0,
  // SEARCH
  "search.quickOpen.includeSymbols": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/vendor": true,
    "**/.idea": true,
    "api/app": true,
    "**/public": true
  },
  // FILES
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/tmp/**": true,
    "**/vendor/**": true,
    "api/app": true,
    "**/public": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/vendor": true,
    // "**/dist": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/public": false
  },
  "files.associations": {
    "*.mustache": "html",
    "*.jsx": "javascript",
    ".functions": "shellscript",
    ".vimrc": "shellscript"
  },
  // EXPLORER
  "explorer.openEditors.visible": 0,
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  // TELEMETRY
  "telemetry.enableTelemetry": false,
  // TERMINAL
  "terminal.integrated.fontFamily": "Roboto Mono",
  "terminal.integrated.cursorStyle": "underline",
  // GO
  "go.formatTool": "goreturns",
  "go.useCodeSnippetsOnFunctionSuggest": true,
  "go.liveErrors": {
    "enabled": true,
    "delay": 500
  },
  "go.addTags": {
    "tags": "json",
    "options": "json=omitempty",
    "promptForTags": true,
    "transform": "snakecase"
  },
  "go.vetFlags": ["shadow"],
  "go.lintTool": "revive",
  "go.lintFlags": [],
  // PHP
  "php.suggest.basic": false,
  "php.validate.executablePath": "/usr/local/bin/php",
  "php.validate.run": "onType",

  // ESLINT
  "eslint.autoFixOnSave": true,
  "eslint.packageManager": "yarn",
  "eslint.enable": true,

  // JAVASCRIPT
  "javascript.validate.enable": false,

  // SYNC SETTINGS
  "sync.gist": "30114f567936a7c0dd82c5e76a3b8a5a",
  "sync.autoUpload": false,
  "sync.lastUpload": "2018-04-16T19:10:54.963Z",
  "sync.autoDownload": false,
  "sync.lastDownload": "2018-05-01T14:09:00.374Z",
  "sync.forceDownload": false,
  "sync.host": "",
  "sync.pathPrefix": "",
  "sync.quietSync": false,
  "sync.askGistName": false,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,

  // EMMET
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "javascript.updateImportsOnFileMove.enabled": "always"
}
