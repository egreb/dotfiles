function context {

  if [[ -n $1 ]]; then
     kubectl config use-context $1 &> /dev/null
   fi

  contexts=$(kubectl config get-contexts -o name| tr '\n' ' ')
   current_context=$(kubectl config current-context)

  sorted=($(sort <<<"${contexts[*]}"))

  for c in $sorted; do
     if [ "$c" = "$current_context" ]; then
       printf "[%s] " $c
     else
       printf "%s " $c
     fi
   done

  echo
 }

